# Puerto en el que se ejecutará el servidor del backend
SERVER_PORT='3000'
# Nombre de la base de datos MySQL utilizada por el sistema
DB_NAME='sist_control'
# Dirección del host de la base de datos (localhost por defecto)
DB_HOST='127.0.0.1'
# Usuario con permisos para acceder a la base de datos
DB_USER='root'
# Contraseña del usuario de la base de datos (en blanco para entorno local)
DB_PASSWORD=''
# Puerto en el que se comunica MySQL (por defecto 3306)
DB_PORT='3306'
# Motor de base de datos utilizado (puede ser mysql, postgres, etc.)
DB_DIALECT='mysql'
# Clave secreta para generar y verificar tokens JWT (mantener privada)
JWT_SECRET="jwt_secret_key"